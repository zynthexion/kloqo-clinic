
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserClinicId(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data.clinicId;
    }

    function isClinicStaff(clinicId) {
      return isSignedIn() && getUserClinicId(request.auth.uid) == clinicId;
    }

    // --- Rules for Collections ---

    // Clinics can be created by any signed-in user during signup.
    // Only staff of that clinic can read or update it afterwards.
    match /clinics/{clinicId} {
      allow read, update: if isClinicStaff(clinicId);
      allow create: if isSignedIn();
    }

    // Users can create their own user document.
    // They can only read or update their own document afterwards.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isSignedIn();
    }
    
    // Master departments can be read by any signed-in user.
    // This is a "public" read-only collection for populating dialogs.
    match /master-departments/{departmentId} {
        allow read: if isSignedIn();
    }

    // Subcollections within a clinic (doctors, appointments) can be accessed
    // only by staff belonging to that clinic.
    match /clinics/{clinicId}/{subcollection}/{docId} {
      allow read, write, delete: if isClinicStaff(clinicId);
    }
    
    // Patients can create their own record.
    // They can only read/update their own record.
    // Clinic staff can read patient records.
    match /patients/{patientId} {
      allow create: if isOwner(patientId);
      allow read, update: if isOwner(patientId) || isClinicStaff(getUserClinicId(request.auth.uid));
    }
    
    // Mobile app credentials can be created by any signed-in user during signup.
    // Only staff of that clinic can read or update it afterwards.
    match /mobile-app/{credentialId} {
      allow read, update: if isClinicStaff(resource.data.clinicId);
      allow create: if isSignedIn();
    }
  }
}
