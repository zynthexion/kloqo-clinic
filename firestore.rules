rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Get the user's clinic ID from their profile in the /users collection
    function getClinicId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clinicId;
    }
    
    // --- Rules for Top-Level Collections ---

    // Clinics can be created by any signed-in user during signup.
    // Only users belonging to that clinic can read or update it.
    match /clinics/{clinicId} {
      allow read, update: if isSignedIn() && getClinicId() == clinicId;
      allow create: if isSignedIn();
    }

    // Users can create their own user document during signup.
    // They can only read or update their own document afterwards.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isSignedIn();
    }
    
    // Mobile app credentials can be created during signup.
    // Only users belonging to that clinic can manage them later.
    match /mobile-app/{credentialId} {
        allow read, update, delete: if isSignedIn() && get(/databases/$(database)/documents/mobile-app/$(credentialId)).data.clinicId == getClinicId();
        allow create: if isSignedIn();
    }

    // A patient can only view their own record.
    // Clinic staff can read patient records for their clinic.
    match /patients/{patientId} {
        allow read: if isOwner(patientId) || 
                    exists(/databases/$(database)/documents/appointments/{appointmentId} where get(/databases/$(database)/documents/appointments/{appointmentId}).data.patientId == patientId && get(/databases/$(database)/documents/appointments/{appointmentId}).data.clinicId == getClinicId());
        allow write: if isOwner(patientId);
    }
    
    // Doctors, departments, and appointments are linked to a clinic.
    // Users can only access these documents if they belong to the same clinic.
    match /doctors/{docId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSignedIn() && request.resource.data.clinicId == getClinicId();
    }

    match /departments/{deptId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSignedIn() && request.resource.data.clinicId == getClinicId();
    }
    
    match /appointments/{apptId} {
        allow read: if isSignedIn() && get(/databases/$(database)/documents/appointments/$(apptId)).data.clinicId == getClinicId();
        allow create: if isSignedIn() && request.resource.data.clinicId == getClinicId();
        allow update, delete: if isSignedIn() && get(/databases/$(database)/documents/appointments/$(apptId)).data.clinicId == getClinicId();
    }
  }
}
