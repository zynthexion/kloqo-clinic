
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserClinicId(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data.clinicId;
    }

    function isClinicStaff(clinicId) {
      return isSignedIn() && getUserClinicId(request.auth.uid) == clinicId;
    }

    // --- Rules for Collections ---

    // Clinics can be created by any signed-in user during signup.
    // Only staff of that clinic can read or update it afterwards.
    match /clinics/{clinicId} {
      allow read, update: if isClinicStaff(clinicId);
      allow create: if isSignedIn();
    }

    // Users can create their own user document.
    // They can only read or update their own document afterwards.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isSignedIn();
    }

    // Doctors can be created by staff of the same clinic.
    // Doctors can be read by any signed-in user (for the patient app).
    // Doctors can only be updated/deleted by staff of the same clinic.
    match /doctors/{doctorId} {
      allow read: if isSignedIn();
      allow create: if isClinicStaff(request.resource.data.clinicId);
      allow update, delete: if isClinicStaff(resource.data.clinicId);
    }
    
    // Departments can be created by staff of the same clinic.
    // Departments can be read by any signed-in user (for the patient app).
    // Departments can only be updated/deleted by staff of the same clinic.
    match /departments/{departmentId} {
      allow read: if isSignedIn();
      allow create: if isClinicStaff(request.resource.data.clinicId);
      allow update, delete: if isClinicStaff(resource.data.clinicId);
    }

    // Appointments can be read/written by staff of the clinic,
    // or by the patient who owns the appointment.
    match /appointments/{appointmentId} {
        allow read, write: if isClinicStaff(request.resource.data.clinicId) || isOwner(request.resource.data.patientId);
    }

    // Patients can create their own record.
    // They can only read/update their own record.
    // Clinic staff can read patient records associated with their clinic (e.g. for booking).
    match /patients/{patientId} {
      allow create: if isOwner(patientId);
      allow read, update: if isOwner(patientId) || isClinicStaff(getUserClinicId(request.auth.uid));
    }
    
    // Mobile app credentials can be created by any signed-in user during signup.
    // Only staff of that clinic can read or update it afterwards.
    match /mobile-app/{credentialId} {
      allow read, update: if isClinicStaff(resource.data.clinicId);
      allow create: if isSignedIn();
    }
  }
}
