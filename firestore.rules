
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow unauthenticated users to create their own user document and a clinic
    match /users/{userId} {
      allow create: if true;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    match /clinics/{clinicId} {
      allow create: if true;
    }

    // Authenticated users can read from these collections
    match /doctors/{docId} {
      allow read, write: if request.auth != null;
    }
    match /appointments/{aptId} {
      allow read, write: if request.auth != null;
    }
    match /departments/{deptId} {
      allow read, write: if request.auth != null;
    }
    match /patients/{patientId} {
      allow read, write: if request.auth != null;
    }
     match /mobile-app/{credId} {
      allow read, write: if request.auth != null;
    }

    // Fallback to deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
