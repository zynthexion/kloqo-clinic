
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Clinics can be read by anyone, but only updated by the owner.
    match /clinics/{clinicId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    // A user can read/update their own document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Master departments can be fetched individually by any authenticated user.
    match /master-departments/{departmentId} {
      allow get: if request.auth != null;
    }

    // Subcollections for a specific clinic
    match /clinics/{clinicId}/{collection}/{docId} {
      // Allow clinic owner to do anything with their subcollections
      allow read, write: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/clinics/$(clinicId)).data.ownerId;
    }
  }
}
