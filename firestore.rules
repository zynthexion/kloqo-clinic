
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Rules for Collections ---

    // Clinics can be read by anyone. A new clinic can be created by a signed-in user.
    // Only the owner can update their clinic document.
    match /clinics/{clinicId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.uid;
    }

    // A user can create their own document.
    // They can only read or update their own document afterwards.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Doctors can be read by anyone.
    // Write operations are simplified for now.
    match /doctors/{doctorId} {
      allow read, write: if true;
    }

    // Appointments can be read by anyone.
    // Write operations are simplified for now.
    match /appointments/{appointmentId} {
        allow read, write: if true;
    }
   
    // Patients can be read or written to by anyone for now.
    match /patients/{patientId} {
      allow read, write: if true;
    }
    
    // Mobile app credentials can be listed by anyone for login query.
    // Creation is allowed for authenticated users during signup.
    match /mobile-app/{credentialId} {
      allow list: if true;
      allow create: if request.auth != null;
      allow get, update: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.uid;
    }
    
    // Master list of all possible departments. Any signed-in user can read this.
    match /master-departments/{departmentId} {
      allow read: if request.auth != null;
    }

    // Department list per clinic
    match /departments/{departmentId} {
        allow read, write: if true;
    }
  }
}
