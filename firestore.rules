
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(clinicId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clinicId == clinicId;
    }

    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == request.resource.data.uid;
    }

    match /clinics/{clinicId} {
      allow read: if isOwner(clinicId);
    }

    match /clinics/{clinicId}/{subcollection}/{docId} {
      allow read, write: if isOwner(clinicId);
    }
    
    match /mobile-app/{credentialId} {
      function getClinicIdForCreds() {
        return get(/databases/$(database)/documents/mobile-app/$(credentialId)).data.clinicId;
      }
      allow read, write: if isOwner(getClinicIdForCreds());
    }
  }
}
