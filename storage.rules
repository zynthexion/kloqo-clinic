
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files. 
    // For a production app, you should restrict this more.
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow authenticated users to write to the 'doctor_avatars' folder.
    // The path includes a clinicId and the user's ID to ensure they are only
    // writing to their own designated folder structure.
    match /doctor_avatars/{clinicId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
