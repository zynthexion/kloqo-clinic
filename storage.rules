rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow authenticated users to write to their own clinics folder.
    match /clinics/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to write to the 'doctor_avatars' folder.
    match /doctor_avatars/{clinicId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
