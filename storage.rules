rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the 'doctor_avatars' directory
    match /doctor_avatars/{fileName} {
      allow write: if request.auth != null;
    }

    // Allow authenticated users to write to their own clinic's directory during signup
    match /clinics/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
